<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styledash.css"> 
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/index" class="navbar-logo">RoomPro</a>
            <ul class="navbar-menu">
                <li><a href="/dashboard" class="active">Dashboard</a></li>
                <li><a href="/login">Logout</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container">
        <div class="card">
            <h1 class="card-title">Dashboard</h1>
            <h2>Expenses</h2>

            <div class="expense-summary">
                <p>Total Expenses: ₹<%= totalAmount %></p>
            </div>

            <div class="table-container">
                <table class="expense-table">
                    <thead>
                        <tr>
                            <th>Member</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Divided To</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% expenses.forEach(expense => { %>
                            <tr>
                                <td><%= expense.paid_by %></td>
                                <td><%= expense.category %></td>
                                <td>₹<%= expense.amount %></td>
                                <td><%= expense.date %></td>
                                <td><%= expense.included_members %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <h3>Remaining Amount Each Member Should Pay</h3>
            <table class="expense-table">
                <thead>
                    <tr>
                        <th>Member</th>
                        <th>Amount Spent</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <% membersBalance.forEach(member => { %>
                        <tr>
                            <td><%= member.name %></td>
                            <td>₹<%= member.spent %></td>
                            <td>
                                <% if (parseFloat(member.balance) > 0) { %>
                                    <span style="color: green;">₹<%= member.balance %> to receive</span>
                                <% } else { %>
                                    <span style="color: red;">₹<%= Math.abs(member.balance) %> to pay</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <p>&copy; 2024 RoomPro. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
